<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mainBg"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#2ca5f5"
  android:orientation="vertical"
  tools:context=".DetailsActivity">

  <TextView
    android:id="@+id/txtTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="10dp"
    android:text="Weight Lifting"
    android:textColor="#FFF"
    android:textSize="30dp" />

  <ImageView
    android:id="@+id/imageViewExercise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/weight2x" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="#20000000"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingTop="10dp"
      android:text="Turgut it Complete!"
      android:textSize="20dp" />

    <CheckBox
      android:id="@+id/cb1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:buttonTint="#FFF"
      android:text="Complete set 1"
      android:textColor="#FFF"
      android:textSize="20dp" />

    <CheckBox
      android:id="@+id/cb2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:buttonTint="#FFF"
      android:text="Complete set 1"
      android:textColor="#FFF"
      android:textSize="20dp" />

    <CheckBox
      android:id="@+id/cb3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:buttonTint="#FFF"
      android:text="Complete set 1"
      android:textColor="#FFF"
      android:textSize="20dp" />

    <CheckBox
      android:id="@+id/cb4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:buttonTint="#FFF"
      android:text="Complete set 1"
      android:textColor="#FFF"
      android:textSize="20dp" />

    <CheckBox
      android:id="@+id/cb5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:buttonTint="#FFF"
      android:text="Complete set 1"
      android:textColor="#FFF"
      android:textSize="20dp" />
  </LinearLayout>
</LinearLayout>
